<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>
	<hr>
	<%= f.label :content %>
	<%= f.text_area :content, class: "form-control" %>
	<hr>
	<%= f.label "Author" %>
	<%= f.collection_select :author_id, Author.all, :id, :fullname, {},  {class: "form-control"} %>
	<hr>
	<%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>