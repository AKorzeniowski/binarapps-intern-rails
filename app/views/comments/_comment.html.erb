<blockquote class="blockquote" data-comment-id="<%= comment.id %>">
  <p class="mb-0"><%= "#{comment.content}" %></p>
  <footer class="blockquote-footer"><%= "#{comment.commenter_name}, #{comment.created_at}" %><%= link_to "Delete", comment_path(id: comment.id), class: 'btn btn-danger', remote: true, method: :delete, data: { confirm: "Do you really want to delete this comment by #{comment.commenter_name}?" } %></footer>
</blockquote>