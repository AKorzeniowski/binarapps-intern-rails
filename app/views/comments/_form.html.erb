<%= form_for @comment do |f| %>
	<%= f.label :commenter_name %>
	<%= f.text_field :commenter_name, class: "form-control", placeholder: "Enter your name" %>
	<hr>
	<%= f.label :content %>
	<%= f.text_area :content, class: "form-control", placeholder: "Write what comes to your mind" %>
	<hr>
	<%= f.hidden_field(:post_id, value: @post.id) %>
	<%= f.submit 'Add a comment', class: "btn btn-primary" %>
<% end %>