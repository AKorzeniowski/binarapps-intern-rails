<%= form_for @author do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control", placeholder: "Enter author's first name"%>
	</div>
	<div class="form-group">
		<%= f.label :surname %>
		<%= f.text_field :surname, class: "form-control", placeholder: "Enter author's surname" %>
	</div>
	<div class="form-group">
		<%= f.label :age  %>
		<%= f.number_field :age, class: "form-control", placeholder: "Enter author's age" %>
	</div>
	<div class="form-group">
		<%= f.submit 'Save', class: "btn btn-primary" %>
	</div>
<% end %>