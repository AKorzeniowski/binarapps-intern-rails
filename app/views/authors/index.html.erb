<%= render :partial => 'layouts/partials/jumbotron', :locals => { :heading => "List of all authors", :lead => "Here you can view authors. And add them. And edit. And delete. And whatnot." } %>

<div class="container authors">
	<% @authors.each do |author| %>
		<%= render('author', author: author) %>
	<% end %>
</div>

<%= form_for @author, remote: true do |f| %>
  	<div class="form-group">
		<%= f.label :name, class: "form-control" %>
		<%= f.text_field :name %>
	</div>
	<div class="form-group">
		<%= f.label :surname, class: "form-control"  %>
		<%= f.text_field :surname %>
	</div>
	<div class="form-group">
		<%= f.label :age, class: "form-control"  %>
		<%= f.number_field :age %>
	</div>
	<div class="form-group">
		<%= f.submit 'Save' %>
	</div>
<% end %>
<img class="loader" style="display: none" src="https://loading.io/spinners/rolling/lg.curve-bars-loading-indicator.gif">
<hr>
<%= link_to "Add new author", new_author_path %>