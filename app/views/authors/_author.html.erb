<div class="row" data-author-id="<%= author.id %>">
	<div class="col-sm-12 col-md-8"><%= link_to "#{author.fullname}", author_path(id: author.id) %></div>
	<div class="col-sm-12 col-md-2"><%= link_to "edit", edit_author_path(id: author.id) %></div>
	<div class="col-sm-12 col-md-2"><%= link_to "delete", author_path(id: author.id), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></div>
</div>